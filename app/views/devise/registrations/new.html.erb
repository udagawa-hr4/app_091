<%# http://localhost:3000/users/sign_up　　　で確認 %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'> 
    <div class='form-header'>
      <h1 class='form-header-text'>
        Sign up!
      </h1>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%# アイコンをどうするか？はじめに登録させると途中で辞める人がいそう %>
    
  
    <div class="form-group">
    <%# 「wrap」スタイルは、ホームページの縦幅・横幅・位置を決めるためのスタイル。 横幅を指定し、左右の幅を自動的に調整してコンテンツが画面中央になるよう整えてくれる %>
      <div class='form-text-wrap'>
        <label class="form-text">・Nickname</label>
      </div>
        <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) Jasmine", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・Email</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・Password</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・ Retype Password </label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"上記と同じパスワードを入力して下さい" %>
    </div>
  

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・Full Name</label>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_field :family_name, class:"input-name", id:"family-name", placeholder:"例) Yamada" %>
        <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) Hanako" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・Birth day</label>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
          f.date_select(
            :birthday,
            class:'select-birth',
            id:"birth-date",
            use_month_numbers: true,
            prompt:'--',
            start_year: 1930,
            end_year: (Time.now.year - 5),
            date_separator: '%s'),
          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・Phone Number</label>
      </div>
      <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
    </div>

    <%# <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">・Profile</label>
      </div>
      <div class="register-img">
        <%= f.label :image_file, "Upload image (アイコンになります)", class: "image_input_btn" %>
        <%# <%= f.file_field :image_file, class: "image_form" %>
      <%# </div>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例) 趣味など、好きなことを書きましょう！" %>
     <%# </div>  %>
    

    <%# <div class='register-btn'>
      <%= f.submit "Sign up!" ,class:"register-img-btn" %>
    <%# </div>  %> 
  
      <div class="clearfix" id="contentBox">
      <div id="tenth" class="buttonBox">
        <button type="submit">
          <span>S</span>
          <span class="tanomu2">i</span>
          <span class="tanomu3">g</span>
          <span class="tanomu">n</span>
          <span> </span>
          <span>_</span>
          <span>u</span>
          <span> </span>
          <span>p</span>
        </button>
      </div>
    </div>




    
  </div>
</div>
<% end %>

