<h2>Sign up!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">NickName</label>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) Jasmine", maxlength:"40" %>
  </div>

  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"email-field", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"password-field", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"password-confirmation-field", placeholder:"上記と同じ記入をしてください", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>